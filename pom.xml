    <name>NANA & FAISAL Chat Server</name>

    <properties>
        <maven.compiler.source>17</maven.compiler.source> <!-- أو Java 11/21 حسب بيئتك -->
        <maven.compiler.target>17</maven.compiler.target>
    </properties>

    <dependencies>

        <!-- Java WebSocket -->
        <dependency>
            <groupId>org.java-websocket</groupId>
            <artifactId>Java-WebSocket</artifactId>
            <version>1.5.3</version>
        </dependency>

        <!-- GSON (لو أردت لاحقًا إرسال بيانات JSON) -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.10.1</version>
        </dependency>

    </dependencies>

</project>
